{
  "name": "watchwyrd",
  "version": "0.0.37",
  "description": "AI-powered Stremio addon for movie & TV recommendations (Gemini, Perplexity, OpenAI)",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "check": "npm run typecheck && npm run lint && npm run format:check && npm test",
    "check:all": "npm run check && npm run knip",
    "knip": "knip",
    "prepublishOnly": "npm run build",
    "precommit": "npm run check",
    "generate:logos": "node scripts/generate-logos.js"
  },
  "keywords": [
    "stremio",
    "addon",
    "gemini",
    "ai",
    "recommendations",
    "movies",
    "tv-series",
    "watchwyrd"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fpMiguel/watchwyrd.git"
  },
  "bugs": {
    "url": "https://github.com/fpMiguel/watchwyrd/issues"
  },
  "homepage": "https://github.com/fpMiguel/watchwyrd#readme",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@perplexity-ai/perplexity_ai": "^0.22.0",
    "bottleneck": "^2.19.5",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "lru-cache": "^11.2.5",
    "openai": "^6.16.0",
    "opossum": "^9.0.0",
    "p-retry": "^7.1.1",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "undici": "^7.19.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "knip": "^5.82.1",
    "prettier": "^3.8.0",
    "sharp": "^0.34.5",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17"
  }
}
